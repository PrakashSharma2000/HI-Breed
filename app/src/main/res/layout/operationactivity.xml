<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a0ffe6"
    android:orientation="vertical"
    android:textAlignment="center"
    app:layout_gravity="center|center_horizontal">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/round"
        android:fontFamily="monospace"
        android:text="Hi-Breed"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="389dp"
        android:layout_height="280dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/round"
        android:textAlignment="center"
        app:columnCount="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:rowCount="4">

        <TextView
            android:id="@+id/textView"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center|center_horizontal"
            android:text="Relay 1"
            android:textAlignment="center"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center|center_horizontal"
            android:text="Relay 2"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_column="0"
            app:layout_row="1" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center|center_horizontal"
            android:text="Relay 3"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_column="0"
            app:layout_row="2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center|center_horizontal"
            android:text="Relay 4"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_column="0"
            app:layout_row="3" />

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round"
            android:gravity="center|center_horizontal"
            android:text="ToggleButton"
            android:textAlignment="center"
            app:layout_column="1"
            app:layout_gravity="center|center_horizontal"
            app:layout_row="0" />

        <ToggleButton
            android:id="@+id/toggleButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round"
            android:gravity="center|center_horizontal"
            android:text="ToggleButton"
            android:textAlignment="center"
            app:layout_column="1"
            app:layout_gravity="center|center_horizontal"
            app:layout_row="1" />

        <ToggleButton
            android:id="@+id/toggleButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round"
            android:gravity="center|center_horizontal"
            android:text="ToggleButton"
            android:textAlignment="center"
            app:layout_column="1"
            app:layout_gravity="center_horizontal|top|center_vertical"
            app:layout_row="3" />

        <ToggleButton
            android:id="@+id/toggleButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round"
            android:gravity="center|center_horizontal"
            android:text="ToggleButton"
            android:textAlignment="center"
            app:layout_column="1"
            app:layout_gravity="center|center_horizontal"
            app:layout_row="2" />
    </androidx.gridlayout.widget.GridLayout>

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginBottom="136dp"
        android:background="@drawable/round"
        android:foregroundGravity="fill"
        android:text="Logout"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>